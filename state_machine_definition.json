{
    "Comment": "Simple two-step workflow triggered by S3 uploads",
    "StartAt": "TaskOne",
    "States": {
        "TaskOne": {
            "Type": "Task",
            "Resource": "TASK_ONE_LAMBDA_ARN",
            "ResultPath": "$.taskOneResult",
            "Next": "TaskTwo"
        },
        "TaskTwo": {
            "Type": "Task",
            "Resource": "TASK_TWO_LAMBDA_ARN",
            "InputPath": "$.taskOneResult",
            "ResultPath": "$.taskTwoResult",
            "End": true
        }
    }
}